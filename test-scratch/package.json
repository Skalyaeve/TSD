{
	"name": "test-scratch",
	"version": "1.0.0",
	"main": "server/dist/index.js",
	"type": "module",
	"scripts": {
		"start": "npm run clean && npm run compile && npm run bundle-run",
		"clean-dist": "(yes | rm -rf server/dist/*) && (yes | rm -rf server/public/dist/*) && (yes | rm -rf server/authoritative_server/dist/*)",
		"clean-bundle": "(yes | rm -rf server/authoritative_server/bundling/*) && (yes | rm -rf server/public/bundling/*)",
		"clean": "npm run clean-bundle && npm run clean-dist",
		"compile-back": "node_modules/.bin/tsc -p tsconfig.back.json",
		"compile-headless": "node_modules/.bin/tsc -p tsconfig.headless.json",
		"compile-front": "node_modules/.bin/tsc -p tsconfig.front.json",
		"compile": "npm run compile-back && npm run compile-headless && npm run compile-front",
		"bundle-back": "webpack --config-name=back-client --mode=development",
		"run-back": "node --inspect server/dist/index.js",
		"bundle-run-back": "npm run bundle-back && npm run run-back",
		"bundle-run-front": "webpack serve --config-name=front-client --mode=development",
		"bundle-run": "concurrently \"npm run bundle-run-back\" \"npm run bundle-run-front\""
	},
	"devDependencies": {
		"@babel/core": "^7.21.8",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-runtime": "^7.21.4",
		"@babel/preset-env": "^7.21.5",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.21.5",
		"@types/jsdom": "^21.1.1",
		"@types/node": "^20.1.3",
		"@types/socket.io": "^3.0.2",
		"babel-loader": "^9.1.2",
		"canvas": "^2.11.2",
		"concurrently": "^8.0.1",
		"express": "^4.18.2",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.1",
		"jsdom": "^22.0.0",
		"phaser": "^3.60.0",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.6.1",
		"typescript": "^5.0.4",
		"uuid": "^9.0.0",
		"webpack": "^5.82.1",
		"webpack-cli": "^5.1.1",
		"webpack-dev-server": "^4.15.0"
	},
	"dependencies": {
		"@types/uuid": "^9.0.1"
	}
}
